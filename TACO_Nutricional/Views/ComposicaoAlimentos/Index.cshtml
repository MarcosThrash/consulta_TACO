@model IEnumerable<TACO_Nutricional.Models.Entidades.Alimento>

@{
    ViewData["Title"] = "Index";
}

<h1> <i class="fas fa-apple-alt text-success"></i>  Alimentos</h1>
<h5>Composição para 100 gramas</h5>

<table class="table table-hover table-striped">

    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th class="text-center" scope="col">Kcal</th>
            <th class="text-center" scope="col">Proteínas</th>
            <th class="text-center" scope="col">Lipídeos</th>
            <th class="text-center" scope="col">Carboidratos</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Nome</th>
                <td class="text-center">@item.Calorias.ToString("0")</td>
                <td class="text-center">@item.Proteina.ToString("0.0")</td>
                <td class="text-center">@item.Lipideos.ToString("0.0") </td>
                <td class="text-center"> @item.Carboidrato.ToString("0.0")</td>
            </tr>
        }
        
    </tbody>

</table>
